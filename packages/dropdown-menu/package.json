{
  "name": "@ryan-rn-primitives/dropdown-menu",
  "version": "1.2.0",
  "description": "Primitive dropdown menu",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./dist/dropdown-menu": {
      "import": "./dist/dropdown-menu.mjs",
      "require": "./dist/dropdown-menu.js",
      "types": "./dist/dropdown-menu.d.ts",
      "default": "./dist/dropdown-menu.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "pub:beta": "pnpm publish --no-git-checks --access public --tag beta",
    "pub:next": "pnpm publish --no-git-checks --access public --tag next",
    "pub:release": "pnpm publish --access public"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@ryan-rn-primitives/hooks": "workspace:*",
    "@ryan-rn-primitives/slot": "workspace:*",
    "@ryan-rn-primitives/types": "workspace:*",
    "@ryan-rn-primitives/utils": "workspace:*"
  },
  "devDependencies": {
    "@tsconfig/react-native": "^1.0.1",
    "@types/react": "~19.0.14",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "tsup": "^8.1.0",
    "@ryan-rn-primitives/portal": "workspace:*"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-web": "*",
    "@ryan-rn-primitives/portal": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ailearningguy/ryan-rn-primitives.git",
    "directory": "packages/dropdown-menu"
  },
  "author": "dino <ailearningguy@gmail.com>",
  "publishConfig": {
    "access": "public"
  }
}
